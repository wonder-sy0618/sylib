<div class="content">

    <style>
		/* CSS Document */
		body {
			margin: 0;
			padding: 0;
			font-size:14px;
			font-family: "宋体";
		}
		body, div, span, dl, dt, dd, ul, ol, li, h1, h2, h3, h4, h5, h6, pre, form, fieldset, input, textarea, blockquote, table, td, tr, th, p {
			padding: 0;
			margin: 0;
		}
		li, dd, ol, ul {
			list-style-type: none;
		}
		.fl {
			float: left;
		}
		.fr {
			float: right;
		}
		img {
			border: 0px;
		}
		.clear {
			clear: both;
		}
		/*去掉a标签超链接的虚线框*/
		a {
		blr:expression(this.onFocus=this.blur()); /* IE Opera */
			outline: none; /* FF Opera */
		}
		a:focus {
			-moz-outline-style: none; /* FF */
		}
		body{
			background:url({{path_center_bg }}) repeat;}
		.subject{
			width:516px;
			margin:0 auto;
			padding-top:150px;}
		.center{
			margin-top:30px;
			width:516px;
			height:270px;
			background:url({{path_center_fr }}) no-repeat;
			padding-top: 16px;
			}
		.center table {
			    margin-top: 30px;
		}
		.form_1{
			padding-top:45px;}
		.input_1, .input_2{
			width:272px;
			padding:0px 5px;
			height:37px;
			line-height:37px;
			font-size:12px;
			color:#333; 
			background:url({{path_res }}bg_input1.png) no-repeat;
			border:0px;
			margin:6px 10px;}
		.input_2{
			width:159px;
			background:url({{path_res }}bg_input2.png) no-repeat;
			height:32px;
			line-height:32px;}
		.aniu, .aniu1{
			margin-top:22px;
			width:121px;
			height:29px;
			line-height:29px;
			background:url({{path_res }}land.png) no-repeat;
			border:0px;
			cursor:pointer;}
		.aniu1{
			background:url({{path_res }}reset.png) no-repeat;}
    </style>
						
    <form role="form" method="post" class="validate_form" >
		<div class="subject">
			<div class="center">
				<table width="100%" border="0" cellspacing="0" cellpadding="0">
					<tr>
						<td align="right" width="120">
							用户名:
						</td>
						<td>
							<input type="text" class="input_1" placeholder="账号" name="{{pname_form_username }}" value="{{value_form_username }}" />
						</td>
					</tr>
					<tr>
						<td align="right">
							密&nbsp;&nbsp;码:
						</td>
						<td>
							<input type="password" class="input_1" placeholder="密码" name="{{pname_form_password }}" value="" />
						</td>
					</tr>
					<tr>
						<td align="right">
							验证码:
						</td>
						<td>
							<input type="text" class="input_2" name="{{pname_form_randcode }}" value="" />
							<img src="{{path_randcode }}" width="100" height="31" style="vertical-align:middle;" class="randcode" />
						</td>
					</tr>
					<tr>
						<td align="right">&nbsp;</td>
						<td style="color:#F00; padding-left:5px; padding-top:3px;
							{{if !notice_message || notice_message == '' }}display:none;{{/if}} " 
							class="notice">
								{{notice_message }}
						</td>
					</tr>
					<tr>
						<td>&nbsp;</td>
						<td>
							<input name="" type="submit"  class="aniu" value="" />
							<input name="" type="reset"  class="aniu1" value="" />
						</td>
					</tr>
				</table>
			</div>
		</div>
		
    </form>
    
</div>
